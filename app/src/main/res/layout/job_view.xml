<?xml version="1.0" encoding="utf-8"?>
<com.PeopleGatchi.Views.JobView xmlns:android="http://schemas.android.com/apk/res/android"
                                android:orientation="vertical" android:layout_width="match_parent"
                                android:layout_height="match_parent">

    <Button
        android:text="Manual Labor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/labor_butt"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@android:color/holo_purple"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:text="Engineer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/engineer_butt"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginBottom="5dp"/>

    <Button
        android:text="Scientist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/science_butt"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@android:color/holo_green_light" />
</com.PeopleGatchi.Views.JobView>